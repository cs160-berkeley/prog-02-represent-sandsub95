<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/detailed"
    android:background="@color/primaryRed">
    <LinearLayout
        android:id="@+id/detailedll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:id="@+id/title"
            android:layout_width="640px"
            android:layout_height="wrap_content"
            android:textSize="96px"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Sen. John McCain"
            android:layout_marginTop="100px"
            android:layout_marginBottom="50px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/partydist"
                android:layout_width="330px"
                android:layout_height="wrap_content"
                android:text="R - AZ"
                android:textColor="@color/white"
                android:textSize="66px"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/profpic"
                android:layout_width="420px"
                android:layout_height="560px"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/termend"
                android:layout_width="330px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:textSize="66px"
                android:text="Term ends: 2017"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/detwebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="36px"
            android:text="www.johnmccain.com"/>
        <TextView
            android:id="@+id/detemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="36px"
            android:text="johnny@johnmccain.com"/>
        <LinearLayout
            android:layout_marginTop="80px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="48px"
                android:text="TWEETS:" />
            <TextView
                android:id="@+id/twitterhandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="48px"
                android:layout_marginLeft="40px"
                android:text="\@SenJohnMcCain" />
        </LinearLayout>
        <TextView
            android:id="@+id/tweets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="48px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:text="Last Tweet"/>
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="48px"
                android:text="COMMITTEES:" />
            <TextView
                android:id="@+id/committees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="48px"
                android:layout_marginLeft="40px"
                android:text="Senate Armed Services\nSenate Committee of Indian Affairs" />
            <!--Indented Following Lines?-->
        </LinearLayout>
        <TextView
            android:layout_marginTop="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:textColor="@color/white"
            android:textSize="48px"
            android:text="RECENT BILLS:"
            />

    </LinearLayout>
</ScrollView>
