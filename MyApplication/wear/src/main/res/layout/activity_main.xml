<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:layout_gravity="center"
    tools:context="cs160.represent.MainActivity" android:orientation="vertical" tools:deviceIds="wear_round">
    <LinearLayout
        android:id="@+id/watch_rep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primaryRed">
        <TextView android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random: AZ D5"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <TextView android:id="@+id/rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sen. John McCain"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
        <TextView android:id="@+id/dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R - AZ"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/midPurple" >
        <Button
            android:id="@+id/details_btn"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:text="Details"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40px"
            android:background="@color/midPurple"
            />
        <Button
            android:id="@+id/vote_btn"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:text="Vote"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@color/midPurple"
            />
    </LinearLayout>
</LinearLayout>


